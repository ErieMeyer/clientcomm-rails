<div class="slab">
  <div class="grid">
    <div class="grid__item width-two-thirds shift-one-sixth">
      <div class="form-card form-card--compact">

        <div class="form-card__header">
          <div class="toolbar">
            <div class="toolbar__left">
              <h1 class="form-card__title">Change your password</h1>
            </div>
          </div>
        </div>

        <div class="form-card__content">
          <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, builder: GcfFormBuilder do |f| %>
              <%= f.hidden_field :reset_password_token %>

              <%= f.gcf_input_field :password, "New password", type: "password", classes: ['form-width--long'], notes: ['(' + @minimum_password_length.to_s + ' characters minimum)'] %>
              <%= f.gcf_input_field :password_confirmation, "Confirm new password", type: "password", classes: ['form-width--long'] %>

              <div class="form-card__footer">
                <div class="toolbar">
                  <div class="toolbar__left">
                    <div class="toolbar__item">
                      <%= f.continue 'Change my password' %>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
